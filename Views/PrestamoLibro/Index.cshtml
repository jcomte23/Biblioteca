@{
    ViewData["Title"] = "Prestamo";
}

<section>
    <article class="d-flex justify-content-between">
        <form class="d-flex " role="search">
            <input class="form-control me-2" type="search" placeholder="Usuario, Libro ..." aria-label="Search">
            <button class="btn btn-outline-success d-flex" type="submit"><i class="bi bi-search me-2"></i>Buscar</button>
        </form>
        <div>
            <a class="btn btn-primary text-capitalize" role="button" asp-area="" asp-controller="PrestamoLibro" asp-action="Create">nuevo</a>
        </div>
    </article>
</section>

<section class="table-responsive-sm">
    <table class="table table-striped table-hover align-middle caption-top text-capitalize">
        <caption>Lista de libros</caption>
        <thead>
            <tr>
                <th scope="col">usuario</th>
                <th scope="col">libro</th>
                <th scope="col">fecha prestamo</th>
                <th scope="col">fecha devoluacion</th>
                <th scope="col">copias prestadas</th>
                <th scope="col" class="text-center">operaciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">javier cómbita téllez</th>
                <td>cien años de soledad</td>
                <td>28/03/2024</td>
                <td>10/04/2024</td>
                <td>1</td>
                <td class="text-center">
                    <div class="btn-group gap-2">
                        <a class="btn btn-success text-capitalize rounded" role="button" asp-area="" asp-controller="PrestamoLibro" asp-action="Details">ingresar</a>
                        <a class="btn btn-warning text-capitalize rounded" role="button" asp-area="" asp-controller="PrestamoLibro" asp-action="Edit">renovar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</section>
